<header class="navbar">
  <% if authenticated? %>
    <div class="navbar__brand">
      <%= current_company.name %>
    </div>
    <div class="navbar__name">
      <%= Current.user.name %>
    </div>
    <%= button_to "Sign out",
                  session_path,
                  method: :delete,
                  class: "btn btn--dark" %>
  <% else %>
    <%= link_to "Sign in",
                new_session_path,
                class: "btn btn--dark navbar__right" %>
  <% end %>
</header>